<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/nav_graph_main"
            app:startDestination="@id/teamListFragment">

    <fragment android:id="@+id/teamListFragment"
              android:name="ca.cuvillon.teamlist.TeamListFragment"
              android:label="@string/team_list_label">
        <action android:id="@+id/action_teamListFragment_to_teamDetailFragment"
                app:destination="@id/teamDetailFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>

    <fragment android:id="@+id/teamDetailFragment"
              android:name="ca.cuvillon.teamdetail.TeamDetailFragment"
              android:label="@string/team_detail_label">
        <argument android:name="teamId" app:argType="integer"/>
    </fragment>
</navigation>
