<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="viewmodel"
                type="ca.cuvillon.teamdetail.TeamDetailViewModel"/>
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/fragment_team_detail_swipe_to_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            showWhenLoading="@{viewmodel.isLoading}"
            app:onRefreshListener="@{() -> viewmodel.refreshData()}"
            tools:context=".TeamDetailFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="@{viewmodel.teamAndPlayers.team.name}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragment_team_detail_name_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    tools:text="Team Name"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragment_team_detail_name_wins"
                    tools:text="Team Wins"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_team_detail_name_tv"
                    app:layout_constraintStart_toStartOf="@+id/fragment_team_detail_name_tv"
                    app:layout_constraintEnd_toEndOf="@+id/fragment_team_detail_name_tv"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fragment_team_detail_name_losses"
                    tools:text="Team losses"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_team_detail_name_wins"
                    app:layout_constraintStart_toStartOf="@+id/fragment_team_detail_name_wins"
                    app:layout_constraintEnd_toEndOf="@+id/fragment_team_detail_name_wins"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:layout_constraintHorizontal_bias="0.0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>
